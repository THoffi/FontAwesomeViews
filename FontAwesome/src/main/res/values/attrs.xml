<?xml version="1.0" encoding="utf-8"?>

<!-- This declares attributes for the FontAwesome TextView -->
<resources>
    <declare-styleable name="FontAwesome">
        <attr name="android:enabled" />
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:padding" />
        <attr name="android:gravity" />
        <attr name="android:background" />
        <attr name="faIcon" format="string" />
        <attr name="faIconColor" format="string" />
        <attr name="faIconSize" format="string" />
        <attr name="faIconPadding" format="string" />
        <attr name="faIconAlignment" format="enum">
            <enum name="LEFT" value="0"/>
            <enum name="RIGHT" value="1"/>
            <enum name="BOTTOM" value="2"/>
            <enum name="TOP" value="3"/>
        </attr>
        <attr name="faAnimateEffect" format="enum">
            <enum name="NONE" value="0"/>
            <enum name="ALPHA" value="1"/>
            <enum name="ROTATION" value="2"/>
            <enum name="BOUNCE" value="3"/>
            <enum name="RIPPLE" value="4"/>
        </attr>
        <attr name="faAnimateNormalColor" format="string" />
        <attr name="faAnimatePressedColor" format="string" />
    </declare-styleable>
</resources>